<!DOCTYPE html>

<!--created by Christian Seremetis on February 5, 2014-->
<!--displays FAQs for the Troop 5 website-->

<head>
    <title>FAQs</title>
    <link rel="stylesheet" type="text/css" href="styles/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>

<body background="photos/lake.JPG">
    <div class="wrapper">
        <!--navbar-->
        <div class="row">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
                <ul class="nav nav-pills">
                    <li role="presentation"><a href="/">Home</a></li>
                    <li role="presentation" class="active"><a href="faqs">FAQs</a></li>
                    <li role="presentation"><a href="UpcomingTrips">Upcoming Trips</a></li>
                    <li role="presentation">
                        <form type="input" action="search" method=POST>
                            <input class="box" type="text" name="captionTitle">
                            <input class="box" type="submit" value="Search Our Site">
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row text-center">
        <h1 id="faqsLabel">Frequently Asked Questions</h1>
    </div>

    <!--where information is displayed-->
    <%@allFAQs.each do |a|%>
        <div class="container">
            <div class="col-md text-center">
                <h1><%=a.title%></h1>
            </div>
            <div class="col-md text-center">
                <img width="150px" height="200px" src=<%=a.pic%>>
            </div>
            <div class="col-md">
                <h3>
                    <%=a.notification%>
                </h3>
            </div>
        </div>
        <br>
    <%end%>
</body>


